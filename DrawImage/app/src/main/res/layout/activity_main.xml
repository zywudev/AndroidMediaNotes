<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_image_view"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:onClick="onButton1Click"
        android:text="@string/draw_image_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_surface_view"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:onClick="onButton2Click"
        android:text="@string/draw_surface_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_image_view" />

    <Button
        android:id="@+id/btn_custom_view"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:onClick="onButton3Click"
        android:text="@string/draw_custom_view"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_surface_view" />

</android.support.constraint.ConstraintLayout>